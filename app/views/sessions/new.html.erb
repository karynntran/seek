
<h1> Login </h1>


<%= form_tag("/sessions", method: "post") do %>
    <div class='field'>
    	<%= label_tag :username %><br>
      <%= text_field_tag(:username, nil, placeholder: 'your name?') %>
    </div>
    <div class='field'>
    	<%= label_tag :password %><br>
      <%= password_field(:password, nil, placeholder: 'password?') %>
      <%= submit_tag("Login") %>
    </div>
<% end %>