
<body>

	<div class="clearfix top-wrapper">
		<!-- photo code -->
		<div class="city">
			<h1>CITY<%= @destination %></h1>
		</div>

		<div class="clearfix photo">
			<%= image_tag "camera.png", :class => "icon" %>
			<h2>RECENT INSTAGRAM PHOTOS</h2>
			<div class="gallery"><%= render partial: "photos" %></div>
		</div>
	</div>



	<div class="clearfix bottom-wrapper">

		<!-- flight code-->
		<div class="flight">
			<%= image_tag "flights.png", :class => "icon" %>
			<h2>AVERAGE FLIGHT PRICE: $<%= @avg_price%> </h2>
		</div>

		<!-- weather code -->
		<div class="weather">
			<%= image_tag "weather.png", :class => "icon" %>
			<h2>HISTORICAL WEATHER</h2>
				<p><%= image_tag "high.png", :class => "sub-icon" %>High of <%= @max_temp %></p>
				<p><%= image_tag "low.png", :class => "sub-icon" %>Low of <%= @min_temp %></p>
				<p><%= image_tag "rain.png", :class => "sub-icon" %>Average Rainfall <%= @avg_precipitation %></p>

		</div>

		<!-- big mac code -->
		
		<div class="big-mac">
			<%= image_tag "food.png", :class => "icon" %>
			<h2>A BIG MAC WILL COST YOU</h2>
		</div>
		
	</div>

</body>
